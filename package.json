{
  "name": "likvi-time-tracking",
  "author": {
    "name": "codelayer GmbH",
    "email": "mail@codelayer.de"
  },
  "homepage": "https://likvi.de",
  "repository": {
    "url": "https://github.com/codelayerhq/likvi-timetracking-desktop"
  },
  "license": "GPL-3.0-or-later",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "new": "hygen new"
  },
  "main": "background.js",
  "dependencies": {
    "@popperjs/core": "^2.5.4",
    "@types/chart.js": "^2.9.24",
    "autocompleter": "^6.0.5",
    "axios": "^0.21.0",
    "axios-auth-refresh": "^3.0.0",
    "chart.js": "^2.9.3",
    "chartjs-plugin-datalabels": "^0.7.0",
    "core-js": "^3.7.0",
    "date-fns": "^2.15.0",
    "electron-updater": "^4.3.5",
    "tailwindcss": "^1.6.2",
    "vue": "^3.0.0-0",
    "vue-i18n": "^9.0.0-beta.2",
    "vue-router": "^4.0.0-rc.2",
    "vue-toastification": "^2.0.0-beta.7",
    "vuex": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.6.1",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-beta.8",
    "electron": "^10.1.5",
    "electron-builder-notarize": "^1.2.0",
    "electron-devtools-installer": "^3.1.0",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^7.13.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "hygen": "^6.0.4",
    "prettier": "^2.0.5",
    "spectron": "^12.0.0",
    "typescript": "~4.0.5",
    "vue-cli-plugin-electron-builder": "~2.0.0-rc.5",
    "vue-jest": "^5.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel",
    "transform": {
      "^.+\\.vue$": "vue-jest"
    }
  }
}
